<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/postScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/postTagsTextView"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/postTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_toRightOf="@id/postScoreTextView"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/postTagsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/postTitleTextView"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/postScoreTextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/postAuthorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/postTagsTextView"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/postScoreTextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/postTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/postTagsTextView"
        android:layout_toRightOf="@id/postAuthorTextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/postCommentsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/postTagsTextView"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/postTimeTextView"
        android:textSize="20sp" />


</RelativeLayout>